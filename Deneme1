  <script>
    const PHONE_RAW = "05305436028";
    const PHONE_SHOW = "0530 543 60 28";
    const WA_TEXT = encodeURIComponent("Merhaba, Kocaeli’de servis için arıza kaydı oluşturmak istiyorum.\nİlçe:\nCihaz:\nMarka/Model:\nArıza:\nAdres:");
    const WA_LINK = `https://wa.me/90${PHONE_RAW}?text=${WA_TEXT}`;
    const TEL_LINK = `tel:+90${PHONE_RAW}`;

    document.getElementById("phoneText").textContent = PHONE_SHOW;
    document.getElementById("waTop").href = WA_LINK;
    document.getElementById("waFab").href = WA_LINK;
    document.getElementById("callTop").href = TEL_LINK;
    document.getElementById("callFab").href = TEL_LINK;
